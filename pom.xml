			<organizationUrl>https://github.com/spring-cloud/spring-cloud-dataflow/graphs/contributors</organizationUrl>
		</developer>
	</developers>
	<properties>
		<java.version>1.8</java.version>
		<javadoc.opts>-Xdoclint:none</javadoc.opts>

		<spring-cloud-dataflow-ui.version>2.3.0.M2</spring-cloud-dataflow-ui.version>

		<spring-cloud-deployer.version>2.1.0.M2</spring-cloud-deployer.version>
		<spring-cloud-deployer-local.version>2.1.0.M2</spring-cloud-deployer-local.version>

		<!-- note - check version of reactor at deployer-cf/cf-java-client uses -->
		<spring-cloud-deployer-cloudfoundry.version>2.1.0.M2</spring-cloud-deployer-cloudfoundry.version>
		<reactor.version>3.2.0.RELEASE</reactor.version>
		<spring-cloud-deployer-kubernetes.version>2.1.0.M2</spring-cloud-deployer-kubernetes.version>
		<kubernetes-client.version>4.1.0</kubernetes-client.version>

		<spring-cloud-skipper.version>2.2.0.M2</spring-cloud-skipper.version>

		<spring-cloud-task.version>2.2.0.M3</spring-cloud-task.version>

		<spring-security-oauth2-autoconfigure.version>2.2.0.RC1</spring-security-oauth2-autoconfigure.version>

		<!-- Note: Make sure to update `spring-cloud-build` version and `spring-cloud-dependencies` version (spring-cloud.version)
			 are in sync with the https://github.com/spring-cloud/spring-cloud-release/blob/master/pom.xml updates for the respective
			 release versions -->
		<spring-cloud.version>Hoxton.M3</spring-cloud.version>
		<java-cfenv-boot.version>1.1.1.RELEASE</java-cfenv-boot.version>

		<spring-cloud-common-security-config.version>1.2.0.M2</spring-cloud-common-security-config.version>

		<spring-shell.version>1.2.0.RELEASE</spring-shell.version>
		<!-- Use older flyway until we can use flaway 6.x given to us from boot -->
		<flyway.version>5.2.4</flyway.version>
		<commons-io.version>2.4</commons-io.version>
		<commons-lang.version>2.4</commons-lang.version>

		<jacoco-maven-plugin.version>0.7.9</jacoco-maven-plugin.version>
		<sonar-maven-plugin.version>3.0.2</sonar-maven-plugin.version>
		<checkstyle.config.location>src/checkstyle/checkstyle.xml</checkstyle.config.location>
		<semver.version>2.2.0</semver.version>
		<apache-directory-server.version>1.5.5</apache-directory-server.version>
		<codearte-props2yml.version>0.5</codearte-props2yml.version>
	</properties>
